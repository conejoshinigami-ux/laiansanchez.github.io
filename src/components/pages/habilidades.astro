---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import SkillCard from "../components/SkillCard.astro";

const skills = [
  { name: "HTML", level: "Avanzado" },
  { name: "CSS", level: "Avanzado" },
  { name: "JavaScript", level: "Intermedio" },
  { name: "Astro", level: "Intermedio" },
  { name: "TailwindCSS", level: "Avanzado" },
];
---

<html lang="es">
  <head><title>Habilidades | Mi Blog</title>
<meta charset="UTF-8" />
</head>
  <body class="bg-gray-100 text-gray-800">
    <Navbar />
    <section class="p-10 text-center">
      <h2 class="text-4xl font-bold mb-8">Mis Habilidades</h2>
      <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6">
        {skills.map(skill => <SkillCard {...skill} />)}
      </div>
    </section>
    <Footer />
  </body>
</html>
