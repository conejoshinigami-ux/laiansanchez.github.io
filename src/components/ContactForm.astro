<form class="max-w-lg mx-auto bg-white p-8 rounded-2xl shadow space-y-4">
  <input type="text" placeholder="Tu nombre" class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-teal-500 outline-none" required />
  <input type="email" placeholder="Tu correo" class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-teal-500 outline-none" required />
  <textarea placeholder="Tu mensaje" class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-teal-500 outline-none h-32" required></textarea>
