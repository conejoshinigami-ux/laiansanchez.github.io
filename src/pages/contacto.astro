import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<html lang="es">
  <head><meta charset="utf-8"><title>Contacto | LuisDev</title></head>
  <body>
    <Navbar />
    <main class="max-w-4xl mx-auto px-8 pt-40 pb-20">
      <h1 class="text-4xl font-bold text-center mb-12">Cont√°ctame</h1>
      <form class="card p-8 max-w-xl mx-auto space-y-5">
