---
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Luis | Portafolio</title>
	</head>

	<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-700 text-white font-sans">
		<div class="w-full min-h-screen flex flex-col items-center justify-center px-6">
			<slot />
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		scroll-behavior: smooth;
	}

	/* Efecto suave al hacer scroll */
	::-webkit-scrollbar {
		width: 8px;
	}
	::-webkit-scrollbar-thumb {
		background: #555;
		border-radius: 4px;
	}
	::-webkit-scrollbar-thumb:hover {
		background: #777;
	}
</style>
